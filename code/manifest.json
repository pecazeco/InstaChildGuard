{
  "manifest_version": 3,
  "name": "Adultization Identifier for Instagram",
  "version": "1.0",
  "description": "Aplica um desfoque a posts do Instagram que potencialmente possuem conteúdo de sexualização infantil.",
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://api-inference.huggingface.co/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/warning-sign.png",
        "images/checkmark.png",
        "images/loading.gif",
        "images/error.svg"
      ],
      "matches": ["*://*.instagram.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"]
}
